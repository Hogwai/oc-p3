<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="logfile" fileName="logs/App.log">
            <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - (%M: %L) - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
</Configuration>